{% extends "layout-bs4.njk" %}

{% set title = "template debbuging" %}

{% block content %}

    <h1>VAGOAMIN</h1>
    <div class="row">
        <div class="col-3">
            <div class="class-card">
                <div class="class-card-header d-flex">
                            Unidades
                    </div>
                <div class="class-unit-card-body d-flex">
                    <select
                            multiple
                            {# nem a pau apenas class-form-control d-flex deu certo #}
                            class="form-control d-flex"
                            name="unitList"
                            id="unitList"
                        >
                        {% for unit in units %}
                            <option>{{unit.id}} - {{unit.name}}
                            </option>
                        {% endfor %}
                    </select>
                </div>
                <div class="class-card-footer text-muted d-flex">Adm. por:</div>
            </div>
        </div>
        <div class="col-4">
            <div class="class-card">
                <div class="class-card-header d-flex">Computadores</div>
                <div class="class-card-body d-flex">
                    
                </div>
                <div class="card-footer text-muted">Footer</div>
            </div>
        </div>
        <div class="col-5">
            <div class="card">
                <div class="card-header">Header</div>
                <div class="card-body">
                    <h4 class="card-title">Title</h4>
                    <p class="card-text">Text</p>
                </div>
                <div class="card-footer text-muted">Footer</div>
            </div>
        </div>
    </div>


{% endblock %}